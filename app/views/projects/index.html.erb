<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to "Name", :sort => params[:sort].eql?("name asc") ?
                                         "name desc" : "name asc"%></th>
      <th>Description</th>
      <th><%= link_to "Created at",
                      :sort => params[:sort].eql?("created_at desc") ?
                                 "created_at asc" : "created_at desc"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= time_ago_in_words(project.created_at) %> ago</td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Tasks', project_tasks_path(project) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @projects %>

<br>

<%= link_to 'New Project', new_project_path %>
