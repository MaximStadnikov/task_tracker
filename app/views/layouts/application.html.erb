<!DOCTYPE html>
<html>
  <head>
    <title>TaskTracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div class="flash-<%=type%>">
        <p><%=msg%></p>
      </div>
    <%end%>
    

    <%= link_to "Log in", new_sessions_path, class: "btn btn-primary" %>
    <%= link_to "Sign up", new_user_path %>

    <% if current_user.present? %>
      <% flag = true %>
      <h3>User Info:</h3>
      <% if current_user.first_name.eql?("") && current_user.last_name.eql?("")%>
        <p> Email: <%= "#{current_user.email}" %></p>
      <% else %>
        <p> First name: <%= "#{current_user.first_name}" %> | Last name: <%= "#{current_user.last_name}" %></p>
      <% end %>
    <% else %>
      <% flag = false%>
    <% end %>

    <%= yield %>

    <% if !flag %>
    <h4>Welcome guest! </h4>
    <p>To use our application you must sign up or log in.</p>
    <p><%= link_to "Sign Up", new_user_path %> | <%= link_to "Log in", new_sessions_path %></p>
  <% else %>
    <p><%= link_to "Log Out", sessions_path, method: :delete %></p>
  <% end %>

  </body>
</html>
