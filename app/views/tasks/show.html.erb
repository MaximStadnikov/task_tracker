<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Deadline at:</strong>
  <%= @task.deadline_at %>
</p>

<p>
  <strong>Project name:</strong>
  <%= @task.project.name %>
</p>

<p>
  <strong>Requested at:</strong>
  <%= @task.created_at %>
</p>

<%= link_to 'Edit', edit_project_task_path(@task.project, @task) %> |
<%= link_to 'Back', project_tasks_path(@task.project) %>

<%= form_with model: [@project, @task, @comment] do |f| %>
  
  <div>
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  
  <div>
      <%= f.submit %>
  </div>
  
<% end %>

<br>

<% @comments.each do |comment| %>

  <div>
      <h3><%= comment.user.first_name %></h3>
      <%= comment.content %>
   
  </div>

  <div>
      <%= link_to "Edit", edit_project_task_comment_path(@project, @task, comment) %>
      <%= link_to "destroy", project_task_comment_path(@project, @task, comment), method: :delete %>
  </div>

     <hr>

<% end %>