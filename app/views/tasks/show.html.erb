<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Deadline at:</strong>
  <%= @task.deadline_at %>
</p>

<p>
  <strong>Project name:</strong>
  <%= @task.project.name %>
</p>

<p>
  <strong>Requested at:</strong>
  <%= @task.created_at %>
</p>

<%= link_to 'Edit', edit_project_task_path(@task.project, @task) %> |
<%= link_to 'Back', project_tasks_path(@task.project) %>

<%= render 'comments/form', comment: @comment, task: @task, project: @task.project %>

<h1>Comments</h1>

<table>
  <tbody>
  <% @task.comments.each do |comment| %>
    <tr>
      <td style="font-weight: bolder">User#<%= comment.author_id %></td>
    </tr>
    <tr>
      <td><%= comment.text %></td>
      <td><%= comment.created_at %></td>
      <td><%= link_to 'Edit', edit_project_task_comment_path(@project, @task, comment) %></td>
      <td><%= link_to 'Destroy', project_task_comment_path(@project, @task, comment),
                      method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
