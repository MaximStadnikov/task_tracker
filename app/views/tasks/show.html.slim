.container-md
  .card
    .card-body
      h1 = @task.title
      / = link_to 'Edit', edit_project_task_path(@project, @task), class: "btn btn-primary"

      p.card-text
        strong
          ' Description:
        = @task.description

      p.card-text
        strong
          ' Project name:
        = @project.name

      p.card-text
        strong
          ' Created at:
        = @task.created_at

      p.card-text
        strong
          ' Deadline at:
        = @task.deadline_at

    div.p-l-3.p-2
      = link_to 'Edit', edit_project_task_path(@project, @task), class: "btn btn-success ms-1"
      = link_to 'Back', project_tasks_path(@project), class: "btn btn-secondary ms-1"

= render 'comments/form', comment: @comment, task: @task, project: @project
= render 'comments/list', comments: @comments
