<h1>Tasks</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Requested at</th>
    <th>Deadline until</th>
    <th>Project ID</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.created_at %></td>
      <td><%= task.deadline_at %></td>
      <td><%= task.project.name %></td>
      <td><%= link_to 'Show', url_for([@project, task]) %></td>
<!--      task.projects вытаскивает id из-за связи моделей -->
      <td><%= link_to 'Edit', edit_project_task_path(task.project, task) %></td>
      <td><%= link_to 'Destroy', url_for([@project, task]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New task', new_project_task_path %>

