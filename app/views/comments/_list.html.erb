<h1>Comments</h1>

<table>
    <tbody>
    <% task.comments.each do |comment| %>
    <tr>
        <td style="font-weight: bolder">User#<%= comment.author_id %></td>
    </tr>
    <tr>
        <td><%= comment.text %></td>
        <td><%= comment.created_at %></td>
        <td><%= link_to 'Edit', edit_project_task_comment_path(task.project, task, comment) %></td>
        <td><%= link_to 'Destroy', project_task_comment_path(task.project, task, comment),
            method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
    </tbody>
</table>